@model IEnumerable<ProductVM>

@foreach (ProductVM product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Image" class="img-fluid" alt="Product 1">
                </a>
            </div>
            <div class="title text-center">
                <p>@product.Title</p>
                <div class="add_to_cart">
                    <a asp-controller="Home" asp-action="AddBasket" asp-route-id="@product.Id">
                        <p class="addBasket">Add to cart</p>
                    </a>
                </div>
                <div class="price">
                    <span>$</span>
                    <span class="productTotalPrice">@product.Price</span>
                </div>
            </div>
        </div>
    </div>
}